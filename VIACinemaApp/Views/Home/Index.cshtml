<div class="carousel slide" data-ride="carousel" data-interval="6000">

    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/dp2.jpg" alt="ASP.NET" class="center-block" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/div.jpg" alt="Visual Studio" class="center-block" />
            <div class="carousel-caption" role="option">
            </div>
        </div>
        <div class="item">
            <img src="~/images/bnb.jpg" alt="Package Management" class="center-block" />
