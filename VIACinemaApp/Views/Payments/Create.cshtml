@using VIACinemaApp.Models.Payments
@model Payment

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CredictCard" class="control-label"></label>
                <input asp-for="CredictCard" class="form-control" />
                <span asp-validation-for="CredictCard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label"></label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerSurname" class="control-label"></label>
                <input asp-for="OwnerSurname" class="form-control" />
                <span asp-validation-for="OwnerSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityCode" class="control-label"></label>
                <input asp-for="SecurityCode" class="form-control" />
                <span asp-validation-for="SecurityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryMonth" class="control-label"></label>
                <input asp-for="ExpiryMonth" class="form-control" />
                <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpiryYear" class="control-label"></label>
                <input asp-for="ExpiryYear" class="form-control" />
                <span asp-validation-for="ExpiryYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>