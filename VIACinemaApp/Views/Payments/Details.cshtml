@model VIACinemaApp.Models.Payments.PaymentViewModel

<environment include="Development">

    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/jquery.confetti.js" type="text/javascript "> </script>
</environment>
<div>
    <hr />
    <h1>Payment Completed!</h1>
    <h3>Details</h3>

    <dl class="dl-horizontal">
        @foreach (var item in Model.Transactions)
        {
            <dt>
                Movie
            </dt>
            <dd>
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Movie.Id">

                    @item.Movie.MovieTitle
                </a>
            </dd>
            <dt>
                Seats
            </dt>
            <dd>
                @item.SeatNumber
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Payment.CredictCard)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Payment.CredictCard)
        </dd>

        <dt>
            Name and Surname
        </dt>

        <dd>
            @{
                var fullName = Model.Payment.OwnerName + " " + Model.Payment.OwnerSurname;
                @Html.DisplayFor(name => fullName)
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" asp-controller="AvailableMovies" class="checkOut">Explore more</a>
</div>